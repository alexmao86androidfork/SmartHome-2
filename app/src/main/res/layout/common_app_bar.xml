<?xml version="1.0" encoding="utf-8"?>
<com.zhongyong.smarthome.widget.ColorLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis_44">

        <RelativeLayout
            android:id="@+id/actionbar_back"
            android:layout_width="@dimen/dis_40"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12">

            <ImageView
                android:id="@+id/cab_titleBack_iv"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/title_back"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontSize_18"/>

        <TextView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dis_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12"
            android:background="@drawable/next"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize_14"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/cab_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12"
            android:background="@drawable/more3"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/cab_add_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12"
            android:background="@drawable/add"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"/>
    </RelativeLayout>
</com.zhongyong.smarthome.widget.ColorLinearLayout>