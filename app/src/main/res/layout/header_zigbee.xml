<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bottom_border"
            android:paddingLeft="12dp">

            <ImageView
                android:id="@+id/im_iv_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/gateway2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/im_iv_theme"
                android:text="zigbee网关信息"
                android:textColor="@color/colorBlue"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/connect_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_24"
                android:text="连接"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gatewayTvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12"
                android:background="@null"
                android:padding="12dp"
                android:text="网关IP："
                android:textColor="@color/colorTitle"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/gatewayTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请连接网关"
                android:textColor="@color/colorTitle"
                android:textSize="14sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/top_bottom_border"
            android:paddingLeft="12dp">

            <ImageView
                android:id="@+id/im_iv_deviceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/devices2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/im_iv_deviceLabel"
                android:text="相关设备信息"
                android:textColor="@color/colorBlue"
                android:textSize="16sp"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>