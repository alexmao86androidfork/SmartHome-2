<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 设置弹出窗口的属性，frame叠加，isfloat是否浮动，tarnslucent是否半透明，dim是背景是否变暗 -->
    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="radioBtn">
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/margin_3</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/fontSize_10</item>
        <item name="android:textColor">@drawable/navigation_bottom_textcolor</item>
    </style>

    <style name="navi_img">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="navi_text">
        <item name="android:textSize">@dimen/fontSize_16</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:layout_marginLeft">@dimen/margin_12</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>

    <style name="NoTitleDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/windowTransaction</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 去掉头部 -->
    </style>
    <style name="labelItemStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="EditItemStyle">
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:inputType">phone</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">50</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_8</item>
        <item name="android:background">@drawable/left_border</item>
    </style>
    <style name="EditNameItemStyle">
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_8</item>
        <item name="android:background">@drawable/left_border</item>
    </style>
    <style name="ButtonBlueItemStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:layout_marginLeft">@dimen/margin_12</item>
        <item name="android:layout_marginRight">@dimen/margin_12</item>
        <item name="android:layout_marginTop">@dimen/dis_20</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_blue</item>
    </style>
    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_mobilenumber">
        <item name="android:hint">@string/mobilenumber_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
