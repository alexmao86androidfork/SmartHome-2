<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SlideUnlockButton">

        <!-- 开关背景图片的属性, 引用的是R.drawable.xx. -->
        <attr name="slideUnlockBackgroundResource" format="reference" />

        <!-- 开关滑动块图片的属性, 引用的是R.drawable.xx. -->
        <attr name="slideUnlockBlockResource" format="reference" />

        <!-- 开关当前的状态的属性, true 打开, false 关闭 -->
        <attr name="unLockState" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TagTextView">
        <attr name="normal_background_color" format="reference"></attr>
        <attr name="selected_background_color" format="reference"></attr>
        <attr name="normal_text_color" format="color"></attr>
        <attr name="selected_text_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="RadarView">
        <attr name="image_width" format="dimension"></attr>
        <attr name="circle_margin" format="dimension"></attr>
        <attr name="circle_width" format="dimension"></attr>
        <attr name="circle_color" format="color"></attr>
        <attr name="circle_colorx" format="color"></attr>
        <attr name="circle_colorxx" format="color"></attr>
        <attr name="circle_colorxxx" format="color"></attr>
        <attr name="saner_color" format="color"></attr>
        <attr name="default_image" format="reference"></attr>
    </declare-styleable>

</resources>